<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sanket.gstbilling.frontend.controller.ReportController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="580.0" prefWidth="960.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Reports and Analytics">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label text="From Date:" />
                        <DatePicker fx:id="fromDate" promptText="Select Start Date" />
                        <Label text="To Date:" />
                        <DatePicker fx:id="toDate" promptText="Select End Date" />
                        <Button mnemonicParsing="false" onAction="#handleGenerateReport" text="Generate Report" />
                        <Button mnemonicParsing="false" onAction="#handlePrintReport" text="Print Report" />
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </HBox>
                <Label text="Summary for Selected Period:" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="30.0">
                    <children>
                        <Label text="Total Invoices:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalInvoicesLabel" text="0">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label text="Total Grand Amount:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalGrandAmountLabel" text="₹0.00">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label text="Total GST Collected:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalGstCollectedLabel" text="₹0.00">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </HBox>
                <Label text="Invoices in Selected Period:" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <TableView fx:id="reportInvoiceTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colInvoiceId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colInvoiceNumber" prefWidth="100.0" text="Invoice No." />
                        <TableColumn fx:id="colInvoiceDate" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="colCustomerName" prefWidth="150.0" text="Customer" />
                        <TableColumn fx:id="colTotalAmountBeforeGst" prefWidth="100.0" text="Amt Before GST" />
                        <TableColumn fx:id="colTotalGstAmount" prefWidth="100.0" text="GST Amt" />
                        <TableColumn fx:id="colGrandTotal" prefWidth="100.0" text="Grand Total" />
                        <TableColumn fx:id="colPaymentStatus" prefWidth="100.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>

